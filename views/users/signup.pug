extends ../layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        h1 Sign Up
        if hasErrors
            .alert.alert-danger
              for message in messages
                p=message
        form(action='/users/signup' method='post')
          .form-group
            label(for="shopper") Shopper
            input#shopper(type='radio' name="role" value="s")
            p
            label(for="deliverer") Deliverer
            input#deliverer(type='radio' name="role" value="d")
          .form-group
            label(for='name') Name
            input#name.form-control(type='text' name='name')
          .form-group
            label(for='email') E-Mail
            input#email.form-control(type='text' name='email')
          .form-group
            label(for='password') Password
            input#password.form-control(type='password' name='password')
          .form-group
            label(for='state') State
            input#state.form-control(type='text' name='state')
          .form-group
            label(for='city') City
            input#city.form-control(type='text' name='city')
          input(type='hidden' name='_csrf' value=csrfToken)
          button.btn.btn-primary(type='submit') Sign Up
